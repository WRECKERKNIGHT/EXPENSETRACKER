{
  "name": "spendsmart-backend",
  "displayName": "SpendSmart Backend API",
  "services": [
    {
      "key": "web",
      "type": "web",
      "plan": "free",
      "buildCommand": "cd backend && npm install && npm run build",
      "startCommand": "cd backend && npm start",
      "envVars": [
        {
          "key": "JWT_SECRET",
          "scope": "build,runtime",
          "generateValue": true
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        }
      ]
    }
  ]
}

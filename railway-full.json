{
  "name": "spendsmart",
  "displayName": "SpendSmart - Expense Tracker",
  "description": "AI-powered expense tracking with real-time bank sync and smart budgeting",
  "services": [
    {
      "key": "backend",
      "type": "web",
      "name": "SpendSmart Backend",
      "plan": "starter",
      "buildCommand": "cd backend && npm install && npm run build",
      "startCommand": "cd backend && npm start",
      "envVars": [
        {
          "key": "JWT_SECRET",
          "scope": "build,runtime",
          "generateValue": true
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "PORT",
          "value": "5000"
        },
        {
          "key": "DATABASE_PATH",
          "value": "/var/lib/spendsmart/app.db"
        }
      ]
    },
    {
      "key": "frontend",
      "type": "web",
      "name": "SpendSmart Frontend",
      "plan": "free",
      "buildCommand": "npm run build",
      "startCommand": "npm run preview",
      "envVars": [
        {
          "key": "VITE_API_BASE",
          "reference": "${{ backend.RAILWAY_PUBLIC_DOMAIN }}/api"
        }
      ]
    }
  ]
}
